{
    "name": "satriabimantara/php-unit-project",
    "description": "Belajar PHP Unit dengan Composer",
    "type": "project",
    "require": {
        "php": ">=8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1"
    },
    "autoload": {
        "psr-4": {
            "Satriabimantara\\PhpUnitProject\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Satriabimantara\\PhpUnitProject\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "I Made Satria Bimantara",
            "email": "satriabimantara.md@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test:product": "phpunit --configuration phpunit.xml --testsuite product",
        "test:counter": "phpunit --configuration phpunit.xml --testsuite counter",
        "test:person": "phpunit --configuration phpunit.xml --testsuite person"
    }
}
